<style is:global>
  :root {
    --header-height: 3.5rem;

    --color-primary: #006878;
    --color-secondary: #dc0054;
    --color-text-ligth: rgb(245, 245, 245); /* tailwindcss.com text-neutral-100*/
    --color-text-dark: rgb(23, 23, 23); /* tailwindcss.com text-neutral-900*/
    --color-primary-body: #f2f2f2;
    --color-secondary-body: #eaeaea;

    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);

    --height-navbar: 64px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Nunito Variable", sans-serif;
    background: var(--color-primary-body);

    background-size: 224px;
  }

  @font-face {
    font-family: "OstrichSans-Heavy";
    src: url("/fonts/OstrichSans-Heavy.otf");
  }

  h1 {
    font-family: "OstrichSans-Heavy";
    font-size: 3rem;
    margin-bottom: 0.5rem;
    text-align: center;
  }
</style>
