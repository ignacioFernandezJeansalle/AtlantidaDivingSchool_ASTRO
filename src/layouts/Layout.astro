<style is:global>
  :root {
    --color-primary: rgb(0, 104, 120); /* #006878 */
    --color-secondary: rgb(220, 0, 84);
    --color-primary-box-shadow: rgba(0, 104, 120, 0.35);
    --color-secondary-box-shadow: rgba(220, 0, 84, 0.35);
    --color-text-ligth: rgb(250, 250, 250);
    --color-text-ligth-hover: rgb(229, 229, 229);
    --color-text-dark: rgb(10, 10, 10);
    --color-text-dark-hover: var(--color-primary);
    --color-primary-body: #f2f2f2;
    --color-secondary-body: #eaeaea;
    --color-footer: #d9d9d9;

    --height-nav: 4rem;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Nunito Variable", sans-serif;
    font-size: 16px;
    background: var(--color-primary-body);
  }

  @font-face {
    font-family: "OstrichSans-Heavy";
    src: url("/fonts/OstrichSans-Heavy.otf");
  }

  main {
    margin-top: var(--height-nav);
  }

  h1,
  h2,
  h3 {
    font-family: "OstrichSans-Heavy";
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  h2 {
    font-size: 2.4rem;
    margin-bottom: 0.4rem;
  }

  h3 {
    font-size: 2.1rem;
    margin-bottom: 0.3rem;
  }

  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
  }

  .xlContainer {
    padding: 0 1rem;
    max-width: 1280px;
    margin-inline: auto;
  }
</style>
