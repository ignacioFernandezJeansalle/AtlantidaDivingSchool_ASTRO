---
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

{title !== "" && <h1 set:html={title} />}
{subtitle !== "" && <h2 set:html={subtitle} />}

<style>
  h1 {
    font-size: 64px;
    text-wrap: balance;
  }

  h2 {
    margin-top: 16px;
    font-size: 32px;
    text-wrap: balance;
  }
</style>
