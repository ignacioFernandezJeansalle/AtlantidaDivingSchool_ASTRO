---
import SectionContainer from "./SectionContainer.astro";
import MenuOpenIcon from "./icons/MenuOpenIcon.astro";
import MenuCloseIcon from "./icons/MenuCloseIcon.astro";
import HeaderNavLink from "./HeaderNavLink.astro";
---

<header class="fixed top-0 left-0 w-full bg-primary shadow-md shadow-primary/50 z-50">
  <SectionContainer>
    <nav class="flex justify-between items-center h-navbar">
      <a href="/">
        <img class="h-navbar w-auto py-2" src="/logo-menu.webp" alt="Logo AtlÃ¡ntida Diving School" />
      </a>

      <div
        id="navMenu"
        class="-md:fixed -md:-top-full -md:left-0 -md:w-full -md:bg-primary -md:shadow-md -md:shadow-primary/50 -md:py-8
               -md:transition-[top] -md:duration-500 md:ml-auto md:shadow-none"
      >
        <ul class="flex flex-col gap-y-4 text-center md:flex-row md:gap-x-4 lg:gap-x-8">
          <li><HeaderNavLink href="/" label="Inicio" /></li>
          <li><HeaderNavLink href="/cursos" label="Cursos" /></li>
          <li><HeaderNavLink href="/buda" label="El Buda" /></li>
          <li><HeaderNavLink href="/viajes" label="Viajes" /></li>
          <li><HeaderNavLink href="/nosotros" label="Nosotros" /></li>
          <li><HeaderNavLink href="/contacto" label="Contacto" /></li>
        </ul>
        <button
          class="absolute top-[1.16rem] right-4 w-8 bg-transparent border-none cursor-pointer text-tcligth hover:text-tcligth-h md:hidden"
          id="navClose"
        >
          <MenuCloseIcon />
        </button>
      </div>

      <button
        class="w-8 bg-transparent border-none cursor-pointer text-tcligth hover:text-tcligth-h md:hidden"
        id="navOpen"
      >
        <MenuOpenIcon />
      </button>
    </nav>
  </SectionContainer>
</header>

<script>
  const navMenu = document.getElementById("navMenu");
  const navOpen = document.getElementById("navOpen");
  const navClose = document.getElementById("navClose");

  navOpen?.addEventListener("click", (event) => {
    event.stopPropagation();
    navMenu?.classList.remove("-md:-top-full");
    navMenu?.classList.add("-md:top-0");
  });

  navClose?.addEventListener("click", (event) => {
    event.stopPropagation();
    navMenu?.classList.remove("-md:top-0");
    navMenu?.classList.add("-md:-top-full");
  });

  document.addEventListener("click", (event) => {
    const evento = event as Event;
    evento.stopPropagation();

    const e = event.target as HTMLElement;
    if (navMenu?.classList.contains("-md:top-0") && !navMenu.contains(e)) {
      navMenu?.classList.remove("-md:top-0");
      navMenu?.classList.add("-md:-top-full");
    }
  });
</script>
