---
import SectionContainer from "./SectionContainer.astro";
import MenuOpenIcon from "./icons/MenuOpenIcon.astro";
import MenuCloseIcon from "./icons/MenuCloseIcon.astro";
---

<header class="header fixed top-0 left-0 w-full bg-yellow-400 shadow-yellow-400 z-50">
  <SectionContainer>
    <nav class="nav">
      <a class="nav__logo" href="/">
        <img src="/logo-menu.webp" alt="Logo AtlÃ¡ntida Diving School" />
      </a>

      <div class="nav__menu" id="navMenu">
        <ul class="nav__list" id="navList">
          <li><a class="nav__link" href="/">Inicio</a></li>
          <li><a class="nav__link" href="/cursos">Cursos</a></li>
          <li><a class="nav__link" href="/buda">El Buda</a></li>
          <li><a class="nav__link" href="/viajes">Viajes</a></li>
          <li><a class="nav__link" href="/nosotros">Nosotros</a></li>
          <li><a class="nav__link" href="/contacto">Contacto</a></li>
        </ul>
        <button class="nav__close" id="navClose">
          <MenuCloseIcon />
        </button>
      </div>

      <button class="nav__open" id="navOpen">
        <MenuOpenIcon />
      </button>
    </nav>
  </SectionContainer>
</header>

<script>
  const navMenu = document.getElementById("navMenu");
  const navOpen = document.getElementById("navOpen");
  const navClose = document.getElementById("navClose");

  navOpen?.addEventListener("click", (event) => {
    event.stopPropagation();
    navMenu?.classList.add("nav__menu--show");
  });

  navClose?.addEventListener("click", (event) => {
    event.stopPropagation();
    navMenu?.classList.remove("nav__menu--show");
  });

  document.addEventListener("click", (event) => {
    const evento = event as Event;
    evento.stopPropagation();

    const e = event.target as HTMLElement;
    if (navMenu?.classList.contains("nav__menu--show") && !navMenu.contains(e)) {
      navMenu?.classList.remove("nav__menu--show");
    }
  });
</script>

<style>
  /*
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: var(--color-primary);
    box-shadow: 0 4px 8px 0 var(--color-primary-box-shadow);
    z-index: 100;
  }
*/
  .nav {
    height: var(--height-nav);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav__logo img {
    display: block;
    width: 100%;
    height: var(--height-nav);
    padding: 0.5rem 0;
  }

  /********** small **********/

  @media screen and (max-width: 768px) {
    .nav__menu {
      position: fixed;
      top: -100%;
      left: 0;
      width: 100%;
      background: var(--color-primary);
      box-shadow: 0 4px 8px 0 var(--color-primary-box-shadow);
      padding: 2rem 0;
      transition: top 0.5s;
    }
  }

  .nav__menu--show {
    top: 0;
  }

  .nav__list {
    display: flex;
    flex-direction: column;
    row-gap: 1rem;
    text-align: center;
  }

  .nav__link {
    color: var(--color-text-ligth);
    font-size: 1.2rem;
  }

  .nav__close,
  .nav__open {
    width: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text-ligth);
  }

  .nav__close {
    position: absolute;
    top: 1.16rem;
    right: 1rem;
  }

  :is(.nav__link, .nav__close, .nav__open):hover {
    color: var(--color-text-ligth-hover);
  }

  /********** large **********/
  @media screen and (min-width: 769px) {
    .nav__menu {
      box-shadow: none;
      margin-left: auto;
    }

    .nav__list {
      flex-direction: row;
      column-gap: 1.2rem;
    }

    .nav__close,
    .nav__open {
      display: none;
    }
  }
</style>
