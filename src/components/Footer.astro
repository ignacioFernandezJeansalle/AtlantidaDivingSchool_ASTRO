const FACEBOOK_LINK = "https://www.facebook.com/BuceoAtlantida/";
const TWITTER_LINK = "https://twitter.com/buceoDS";
const YOUTUBE_LINK = "https://www.youtube.com/channel/UCoyCRFvtQJpkyWX3rAUg5Ig";
const GOOGLE_MAPS_LINK = "https://goo.gl/maps/vCSu5ATBH3A2";
const YEAR = new Date().getFullYear();
---

<footer class="footer">
  <div class="xlContainer">
    <section class="footer__row">
      <h4 class="footer__divecenter">PADI Dive Center S#19636</h4>
      <div class="footer__social-networks">
        <a href={INSTAGRAM_LINK} target="_blank" aria-label="Instagram">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"></path><path
              d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path d="M16.5 7.5l0 .01"></path></svg
          >
        </a>
        <a href={YOUTUBE_LINK} target="_blank" aria-label="Youtube">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z"></path><path
              d="M10 9l5 3l-5 3z"></path></svg
          >
        </a>
        <a href={FACEBOOK_LINK} target="_blank" aria-label="Facebook">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"></path></svg
          >
        </a>
        <a href={TWITTER_LINK} target="_blank" aria-label="Twitter">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M4 4l11.733 16h4.267l-11.733 -16z"
            ></path><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path></svg
          >
        </a>
      </div>
    </section>

    <section class="footer__row">
      <div class="footer__contact-info">
        <a href={GOOGLE_MAPS_LINK} target="_blank">
          <span>CLUB JOSE HERNANDEZ | Bragado 5950, Mataderos, C.A.B.A. Argentina</span>
        </a>
        <p>Tel.: (+54)11.4939.6268 / (+54)11.5979.0203</p>
        <p>info@divingschool.com.ar</p>
      </div>
      <div class="footer__logo-Padi">
        <a href="https://www.padi.com/" target="_blank">
          <img src="/logo-padi-transp-black.webp" alt="Logo PADI" title="Logo PADI" />
        </a>
      </div>
    </section>

    <section class="footer__row">
      <div class="footer__row--legal">
        <p>
          Copyright &copy {YEAR} - <a href="https://www.instagram.com/nacho.fj/" target="_blank">[ Nacho FJ ]</a> - Todas
          las fotografías utilizadas en esta página son propiedad exclusiva de Atlantida Diving School, el uso no autorizado
          de las mismas está penado por la ley.
        </p>
      </div>
    </section>
  </div>
</footer>

<style>
  .footer {
    background: #d9d9d9;
    color: var(--color-text-dark);
  }

  .footer a {
    color: var(--color-text-dark);
  }

  .footer a:hover {
    color: var(--color-text-dark-hover);
  }

  .footer__row {
    display: flex;
    flex-direction: column;
    row-gap: 1rem;
    justify-content: space-between;
    align-items: center;
    padding-block: 1.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  }

  .footer__social-networks {
    display: flex;
    column-gap: 1rem;
    align-items: center;
  }

  .footer__social-networks a {
    text-align: center;
  }

  .footer__social-networks a svg {
    width: 1.7rem;
    height: auto;
  }

  .footer__contact-info {
    text-align: center;
  }

  /********** large **********/
  @media screen and (min-width: 769px) {
    .footer__row {
      flex-direction: row;
      /*column-gap: 1rem;*/
    }

    .footer__contact-info {
      text-align: left;
    }
  }
</style>
