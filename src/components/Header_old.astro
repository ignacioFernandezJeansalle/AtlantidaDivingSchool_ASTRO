<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navbarBtnToggler = document.getElementById("navbarBtnToggler");
    const navbarLinks = document.getElementById("navbarLinks");

    document.getElementById("navbarBtnToggler")?.addEventListener("click", () => {
      /*navbarBtnToggler?.classList.toggle("header__nav--togglerClose");*/
      navbarLinks?.classList.toggle("navbar__links--hide");
    });
  });
</script>

<style>
  .navbar {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: var(--heightNavbar);
    padding: 0px 20px;
    background: var(--colorPrimary);
  }

  .navbar__logo {
    display: grid;
    place-content: center;
    height: var(--heightNavbar);
    border: 1px solid yellow;
  }

  .navbar__logo img {
    width: 100%;
    max-height: var(--heightNavbar);
    padding: 10px 0;
  }

  .navbar__toggler {
    background: transparent;
    border: 1px solid yellow;
    width: 64px;
  }

  .navbar__toggler:hover {
    cursor: pointer;
  }

  .navbar__toggler svg {
    color: white;
    width: 32px;
    height: 32px;
    stroke-width: 1.5;
  }

  .navbar__links {
    position: absolute;
    left: 0px;
    top: var(--heightNavbar);
    width: 100%;
    list-style: none;
    background: var(--colorPrimary);
  }

  .navbar__links li {
    border: 1px solid red;
    margin-bottom: 10px;
  }

  .navbar__links li a {
    display: block;
    border: 1px solid yellow;
    text-decoration: none;
    color: white;
    text-align: center;
    padding: 1rem;
  }

  .navbar__links--hide {
    display: none;
  }
